<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:divider="@color/gray"
        android:showDividers="middle"
        android:background="@drawable/bg_text_round">
        <EditText
            android:id="@+id/txtInputPayErrCode_2"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:textSize="40dp"
            android:hint="00000000"
            android:maxLines="1"
            android:maxLength="8"
            android:background="@drawable/bg_text_round"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />
        <TextView
            android:id="@+id/textView_not_enough_balance"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="残高不足"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/textView_pincode_error"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="PINコードエラー"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/textView_network_error"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="ネットワークエラー"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/textView_timeout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="タイムアウト"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />



    </LinearLayout>

</LinearLayout>