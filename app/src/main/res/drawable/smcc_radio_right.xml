<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/smcc_common_blue">
            </solid>
            <stroke android:width="2px" android:color="@color/smcc_common_blue">
            </stroke>
            <corners android:bottomRightRadius="10px" android:topRightRadius="10px">
            </corners>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/smcc_common_white">
            </solid>
            <stroke android:width="2px" android:color="@color/smcc_common_blue">
            </stroke>
            <corners android:topRightRadius="10px" android:bottomRightRadius="10px">
            </corners>
        </shape>
    </item>
</selector>